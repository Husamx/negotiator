{
  "$id": "https://negot.ai/schemas/llm_judge_output.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LLM Judge Output",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "rubric_id",
    "overall_score",
    "dimension_scores",
    "flags",
    "suggestions"
  ],
  "properties": {
    "rubric_id": {
      "$ref": "common.schema.json#/definitions/id"
    },
    "overall_score": {
      "type": "number"
    },
    "dimension_scores": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "dimension_id",
          "score",
          "evidence"
        ],
        "properties": {
          "dimension_id": {
            "$ref": "common.schema.json#/definitions/id"
          },
          "score": {
            "type": "number"
          },
          "evidence": {
            "type": "string"
          }
        }
      }
    },
    "flags": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "flag_id",
          "severity",
          "message"
        ],
        "properties": {
          "flag_id": {
            "$ref": "common.schema.json#/definitions/id"
          },
          "severity": {
            "type": "string",
            "enum": [
              "BLOCK_SEND",
              "WARN",
              "INFO"
            ]
          },
          "message": {
            "type": "string"
          },
          "span_hint": {
            "type": "string"
          }
        }
      }
    },
    "suggestions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "type",
          "suggestion"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "REWRITE_SENTENCE",
              "ADD_QUESTION",
              "REMOVE_DISCLOSURE",
              "TONE_ADJUST",
              "ADD_JUSTIFICATION"
            ]
          },
          "suggestion": {
            "type": "string"
          }
        }
      }
    }
  }
}
