{
  "$id": "https://negot.ai/schemas/strategy_execution_io.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Strategy Execution I/O",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "request",
    "response"
  ],
  "properties": {
    "request": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "case_snapshot",
        "strategy",
        "inputs"
      ],
      "properties": {
        "case_snapshot": {
          "$ref": "case_snapshot.schema.json"
        },
        "strategy": {
          "$ref": "strategy_template.schema.json"
        },
        "inputs": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "response": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "artifacts",
        "case_patches",
        "judge_outputs",
        "trace"
      ],
      "properties": {
        "artifacts": {
          "type": "array",
          "items": {
            "$ref": "artifact.schema.json"
          }
        },
        "case_patches": {
          "$ref": "common.schema.json#/definitions/json_patch"
        },
        "judge_outputs": {
          "type": "array",
          "items": {
            "$ref": "llm_judge_output.schema.json"
          }
        },
        "trace": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "strategy_id",
            "strategy_revision",
            "inputs_used",
            "generated_at"
          ],
          "properties": {
            "strategy_id": {
              "$ref": "common.schema.json#/definitions/id"
            },
            "strategy_revision": {
              "type": "integer"
            },
            "inputs_used": {
              "type": "object",
              "additionalProperties": true
            },
            "generated_at": {
              "$ref": "common.schema.json#/definitions/iso_datetime"
            },
            "agent_versions": {
              "type": "object",
              "additionalProperties": true
            }
          }
        }
      }
    }
  }
}
