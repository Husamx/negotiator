{
  "$id": "https://negot.ai/schemas/case_snapshot.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Case Snapshot",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "case_id",
    "updated_at",
    "domain",
    "channel",
    "stage",
    "parties",
    "issues",
    "objectives",
    "constraints",
    "risk_profile",
    "timeline"
  ],
  "properties": {
    "case_id": {
      "$ref": "common.schema.json#/definitions/id"
    },
    "updated_at": {
      "$ref": "common.schema.json#/definitions/iso_datetime"
    },
    "domain": {
      "type": "string",
      "enum": [
        "GENERAL",
        "RENT_HOUSING",
        "PROCUREMENT_VENDOR",
        "JOB_OFFER_COMP",
        "SERVICES_CONTRACTOR",
        "PERSONAL_FAMILY"
      ]
    },
    "channel": {
      "type": "string",
      "enum": [
        "EMAIL",
        "DM",
        "IN_PERSON_NOTES"
      ]
    },
    "stage": {
      "type": "string",
      "enum": [
        "INTAKE",
        "PLANNING",
        "PROPOSAL_SENT",
        "COUNTER_RECEIVED",
        "BARGAINING",
        "CLOSING",
        "CLOSED"
      ]
    },
    "parties": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "me",
        "counterpart"
      ],
      "properties": {
        "me": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "name"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "role": {
              "type": "string"
            },
            "preferences": {
              "type": "object",
              "additionalProperties": true
            }
          }
        },
        "counterpart": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "name"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "role": {
              "type": "string"
            },
            "persona_hints": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "stance": {
              "type": [
                "string",
                "null"
              ]
            },
            "constraints": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "stakeholders": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "name",
              "role"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "role": {
                "type": "string"
              },
              "influence_level": {
                "type": "string",
                "enum": [
                  "LOW",
                  "MEDIUM",
                  "HIGH"
                ]
              }
            }
          }
        }
      }
    },
    "issues": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "issue_id",
          "name",
          "type",
          "priority"
        ],
        "properties": {
          "issue_id": {
            "$ref": "common.schema.json#/definitions/id"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "MONEY",
              "DATE",
              "TEXT",
              "ENUM",
              "BOOLEAN"
            ]
          },
          "priority": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10
          },
          "my_position": {},
          "their_position": {},
          "my_interest": {
            "type": [
              "string",
              "null"
            ]
          },
          "their_interest": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      }
    },
    "objectives": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "target",
        "acceptable",
        "walk_away"
      ],
      "properties": {
        "target": {},
        "acceptable": {},
        "walk_away": {},
        "notes": {
          "type": "string"
        }
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "constraint_id",
          "description",
          "source",
          "confidence"
        ],
        "properties": {
          "constraint_id": {
            "$ref": "common.schema.json#/definitions/id"
          },
          "description": {
            "type": "string"
          },
          "source": {
            "type": "string",
            "enum": [
              "USER",
              "COUNTERPART_MESSAGE",
              "DOCUMENT",
              "AGENT_INFERENCE"
            ]
          },
          "confidence": {
            "$ref": "common.schema.json#/definitions/confidence"
          }
        }
      }
    },
    "risk_profile": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "relationship_risk",
        "time_pressure",
        "risk_tolerance"
      ],
      "properties": {
        "relationship_risk": {
          "type": "string",
          "enum": [
            "LOW",
            "MEDIUM",
            "HIGH"
          ]
        },
        "time_pressure": {
          "type": "string",
          "enum": [
            "LOW",
            "MEDIUM",
            "HIGH"
          ]
        },
        "risk_tolerance": {
          "type": "string",
          "enum": [
            "LOW",
            "MEDIUM",
            "HIGH"
          ]
        }
      }
    },
    "timeline": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "recent_events"
      ],
      "properties": {
        "recent_events": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "event_id",
              "ts",
              "type",
              "summary"
            ],
            "properties": {
              "event_id": {
                "$ref": "common.schema.json#/definitions/id"
              },
              "ts": {
                "$ref": "common.schema.json#/definitions/iso_datetime"
              },
              "type": {
                "type": "string",
                "enum": [
                  "MESSAGE_IN",
                  "MESSAGE_OUT",
                  "OFFER",
                  "COUNTER",
                  "NOTE",
                  "DEADLINE",
                  "DECISION"
                ]
              },
              "summary": {
                "type": "string"
              },
              "raw_text": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "offer_matrix": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "packages": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "package_id",
              "label",
              "issue_values"
            ],
            "properties": {
              "package_id": {
                "$ref": "common.schema.json#/definitions/id"
              },
              "label": {
                "type": "string"
              },
              "issue_values": {
                "type": "object",
                "additionalProperties": true
              },
              "my_utility_score": {
                "type": "number"
              },
              "predicted_acceptability": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              }
            }
          }
        }
      }
    },
    "concession_ledger": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "ts",
          "they_asked",
          "we_gave",
          "we_got"
        ],
        "properties": {
          "ts": {
            "$ref": "common.schema.json#/definitions/iso_datetime"
          },
          "they_asked": {
            "type": "string"
          },
          "we_gave": {
            "type": "string"
          },
          "we_got": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      }
    },
    "route_branches": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "branch_id",
          "parent_message_id",
          "variant",
          "counterparty_response",
          "rationale",
          "created_at"
        ],
        "properties": {
          "branch_id": {
            "$ref": "common.schema.json#/definitions/id"
          },
          "parent_message_id": {
            "type": "integer"
          },
          "variant": {
            "type": "string",
            "enum": [
              "LIKELY",
              "RISK",
              "BEST",
              "ALT"
            ]
          },
          "counterparty_response": {
            "type": "string",
            "minLength": 5
          },
          "rationale": {
            "type": "string",
            "minLength": 5
          },
          "created_at": {
            "$ref": "common.schema.json#/definitions/iso_datetime"
          }
        }
      }
    }
    ,
    "intake": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "questions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "answers": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "summary": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}
