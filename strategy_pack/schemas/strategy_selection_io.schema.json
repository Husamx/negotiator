{
  "$id": "https://negot.ai/schemas/strategy_selection_io.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Strategy Selection I/O",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "request",
    "response"
  ],
  "properties": {
    "request": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "case_snapshot",
        "available_strategy_ids",
        "max_results"
      ],
      "properties": {
        "case_snapshot": {
          "$ref": "case_snapshot.schema.json"
        },
        "available_strategy_ids": {
          "type": "array",
          "items": {
            "$ref": "common.schema.json#/definitions/id"
          }
        },
        "max_results": {
          "type": "integer",
          "minimum": 1,
          "maximum": 20
        },
        "user_intent": {
          "type": "string"
        }
      }
    },
    "response": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "ranked_strategies"
      ],
      "properties": {
        "ranked_strategies": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "strategy_id",
              "score",
              "why",
              "failed_prerequisites"
            ],
            "properties": {
              "strategy_id": {
                "$ref": "common.schema.json#/definitions/id"
              },
              "score": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              },
              "why": {
                "type": "string"
              },
              "failed_prerequisites": {
                "type": "array",
                "items": {
                  "$ref": "common.schema.json#/definitions/id"
                }
              }
            }
          }
        }
      }
    }
  }
}
