{
  "$id": "https://negot.ai/schemas/artifact.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Artifact",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "artifact_id",
    "type",
    "title",
    "created_at",
    "content",
    "metadata"
  ],
  "properties": {
    "artifact_id": {
      "$ref": "common.schema.json#/definitions/id"
    },
    "type": {
      "type": "string",
      "enum": [
        "PLAN",
        "MESSAGE_DRAFT",
        "OFFER_MATRIX",
        "OBJECTION_CARDS",
        "CHECKLIST",
        "DECISION_LOG",
        "ROLEPLAY_TRANSCRIPT"
      ]
    },
    "title": {
      "type": "string"
    },
    "created_at": {
      "$ref": "common.schema.json#/definitions/iso_datetime"
    },
    "content": {
      "type": "object",
      "additionalProperties": true
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "case_id",
        "strategy_id",
        "strategy_revision"
      ],
      "properties": {
        "case_id": {
          "$ref": "common.schema.json#/definitions/id"
        },
        "strategy_id": {
          "$ref": "common.schema.json#/definitions/id"
        },
        "strategy_revision": {
          "type": "integer",
          "minimum": 1
        },
        "channel": {
          "type": "string",
          "enum": [
            "EMAIL",
            "DM",
            "IN_PERSON_NOTES"
          ]
        },
        "tone": {
          "type": "string",
          "enum": [
            "WARM",
            "NEUTRAL",
            "FIRM"
          ]
        },
        "inputs_used": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  }
}
